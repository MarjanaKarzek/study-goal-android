<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="12dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/on_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/feed_item_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFF">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/event_item_time_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="35dp"
                android:text="time ago"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_small" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/feed_item_bottom_bar"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/event_item_module_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:text="@string/module_attainment"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/event_item_module"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:text="module"
                    android:textColor="@color/tw__composer_black"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/event_item_activity_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:text="@string/activity_description"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/event_item_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="11dp"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:text="activity"
                    android:textColor="@color/tw__composer_black"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>