<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/app_usage_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:weightSum="7">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView
                android:id="@+id/app_usage_start"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/round_corner_pink_hallow_transparent"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/start"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_normal" />

            <Spinner
                android:id="@+id/startDateSpinner"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/app_usage_start"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView
                android:id="@+id/app_usage_end"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/round_corner_pink_hallow_transparent"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/end"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_normal" />

            <Spinner
                android:id="@+id/endDateSpinner"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/app_usage_end"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/round_corner_pink_hallow_settings_icon" />

        </RelativeLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/app_usage_data_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="2dp" />

</LinearLayout>