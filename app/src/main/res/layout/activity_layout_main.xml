<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/main_screen_navbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/blue">

            <LinearLayout
                android:id="@+id/main_screen_menu"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/menu_icon2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/jisc"
                    android:textAlignment="center"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_jisc_title" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/main_screen_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/arrow_left"
                    android:tint="@android:color/white" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/multiple_button"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp">

                <RelativeLayout
                    android:id="@+id/send"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/send" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/main_screen_friend"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/friend_icon" />

                    <RelativeLayout
                        android:id='@+id/incoming_fr'
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/circle_red"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/incoming_fr_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_margin="1dp"
                            android:text="12"
                            android:textSize="@dimen/text_size_notification_number"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/main_screen_addtarget"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="5dp">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/addtarget_icon" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/main_screen_running"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/timer_white" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/main_screen_settings"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/settings" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/main_screen_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/settings"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_title" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/main_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_screen_navbar" />

        <RelativeLayout
            android:id="@+id/blackout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88000000"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                android:indeterminate="true" />

        </RelativeLayout>
    </RelativeLayout>


    <ListView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white" />

</android.support.v4.widget.DrawerLayout>
