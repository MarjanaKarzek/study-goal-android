<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/stats_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="2dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/this_week_layout"
                            android:background="@color/pink">
                            <RelativeLayout
                                android:id="@+id/stats1"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/first_table_image"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toEndOf="@+id/stats1">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_centerInParent="true"
                                    android:layout_marginEnd="10dp"
                                    android:gravity="end">
                                    <TextView
                                        android:id="@+id/first_table_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="20sp"
                                        android:textColor="#FFF"/>
                                    <TextView
                                        android:id="@+id/first_table_description"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="18sp"
                                        android:textColor="#FFF"
                                        android:layout_marginTop="10dp"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/this_week_layout"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true">
                            <TextView
                                android:id="@+id/this_week"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textColor="@color/pink"
                                android:textSize="18sp"
                                android:layout_marginStart="10dp"
                                android:text="@string/this_week"/>
                            <RelativeLayout
                                android:id="@+id/share"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true">
                                <ImageView
                                    android:tint="@color/pink"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/share"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="2dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/overall_layout"
                            android:background="@color/pink">
                            <RelativeLayout
                                android:id="@+id/stats2"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/second_table_image"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toEndOf="@+id/stats2">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_centerInParent="true"
                                    android:layout_marginEnd="10dp"
                                    android:gravity="end">
                                    <TextView
                                        android:id="@+id/second_table_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="20sp"
                                        android:textColor="#FFF"/>
                                    <TextView
                                        android:id="@+id/second_table_description"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="18sp"
                                        android:textColor="#FFF"
                                        android:layout_marginTop="10dp"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/overall_layout"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true">
                            <TextView
                                android:id="@+id/overall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textColor="@color/pink"
                                android:textSize="18sp"
                                android:layout_marginStart="10dp"
                                android:text="@string/overall"/>
                            <RelativeLayout
                                android:id="@+id/share2"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true">
                                <ImageView
                                    android:tint="@color/pink"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/share"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>