<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="12dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/on_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/attainment_item_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFF">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/attainment_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="35dp"
                android:text="date"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_small" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/attainment_item_bottom_bar">

            <TextView
                android:id="@+id/attainment_item_module_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="@string/module_attainment"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/attainment_item_module"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/attainment_item_module_description"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="module"
                android:textColor="@color/tw__composer_black"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/attainment_item_marks_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/attainment_item_module_description"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="@string/mark_attainment"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/attainment_item_marks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/attainment_item_module"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@id/attainment_item_marks_description"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="mark"
                android:textColor="@color/tw__composer_black"
                android:textSize="@dimen/text_size_normal" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>