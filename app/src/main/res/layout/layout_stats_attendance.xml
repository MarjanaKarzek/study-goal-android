<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:id="@+id/segment_controller"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="2dp"
        android:background="@drawable/round_corners_segmented"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/segment_button_attendance_summary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_corners_segmented_active"
            android:gravity="center"
            android:text="@string/summary"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/segment_button_all_events"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/all"
            android:textColor="@color/text_medium_blue_primary"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>

    <ViewFlipper
        android:id="@+id/viewFlipperEvents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/segment_controller">

        <LinearLayout
            android:id="@+id/viewFlipperChild2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <WebView
                    android:id="@+id/webview_graph"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/events_attended_graph_emptyView"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/empty_events_page_message"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="gone" />

                <!-- used for future api update
                <LinearLayout
                    android:id="@+id/app_usage_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">

                        <TextView
                            android:id="@+id/attendance_start_summary"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_marginEnd="2dp"
                            android:background="@drawable/round_corner_pink_hallow_transparent"
                            android:padding="5dp"
                            android:text="@string/start"
                            android:gravity="center"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/text_size_normal" />

                        <Spinner
                            android:id="@+id/startDateSpinner"
                            style="@style/Widget.AppCompat.DropDownItem.Spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/attendance_start_summary"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">

                        <TextView
                            android:id="@+id/attendance_end_summary"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="2dp"
                            android:background="@drawable/round_corner_pink_hallow_transparent"
                            android:padding="5dp"
                            android:text="@string/end"
                            android:gravity="center"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/text_size_normal" />

                        <Spinner
                            android:id="@+id/endDateSpinner"
                            style="@style/Widget.AppCompat.DropDownItem.Spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/attendance_end_summary"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal">

                        <Button
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:background="@drawable/round_corner_pink_hallow_settings_icon" />

                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/attendance_module_filter_summary"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/round_corner_pink_hallow"
                    android:padding="5dp"
                    android:text="@string/filter_modules"
                    android:textAlignment="center"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:src="@drawable/compare_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_gravity="center"
                        android:text="@string/compare_to_leader"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/dark_grey"
                        android:layout_marginStart="15dp"/>

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>

                    </LinearLayout>-->

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewFlipperChild1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- used for future api update
            <LinearLayout
                android:id="@+id/attendace_date_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="7">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/attendance_start_all"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/round_corner_pink_hallow_transparent"
                        android:padding="5dp"
                        android:text="@string/start"
                        android:gravity="center"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/text_size_normal" />

                    <Spinner
                        android:id="@+id/startDateSpinnerAll"
                        style="@style/Widget.AppCompat.DropDownItem.Spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/attendance_start_all"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/attendance_end_all"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/round_corner_pink_hallow_transparent"
                        android:padding="5dp"
                        android:text="@string/end"
                        android:gravity="center"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/text_size_normal" />

                    <Spinner
                        android:id="@+id/endDateSpinnerAll"
                        style="@style/Widget.AppCompat.DropDownItem.Spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/attendance_end_all"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <Button
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:background="@drawable/round_corner_pink_hallow_settings_icon" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/attendance_module_filter_all"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="10dp"
                android:background="@drawable/round_corner_pink_hallow"
                android:padding="5dp"
                android:text="@string/filter_modules"
                android:textAlignment="center"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_normal" /> -->

            <ListView
                android:id="@+id/event_attendance_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="#d1e0f3" />

            <TextView
                android:id="@+id/events_attended_list_emptyView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/empty_events_page_message"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

    </ViewFlipper>

</RelativeLayout>