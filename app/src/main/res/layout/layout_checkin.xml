<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pin_text_edit"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#464646"
        android:gravity="center"
        android:text="4328"
        android:textColor="#f28500"
        android:textSize="@dimen/text_size_checkin_pin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pin_send_button"
        android:layout_below="@+id/pin_text_edit"
        android:layout_centerInParent="true">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/grid_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="4">

            <TextView
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#a47cea"
                android:textSize="@dimen/text_size_x_large" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="2"
                android:textAlignment="center"
                android:textColor="#a47cea"
                android:textSize="@dimen/text_size_x_large" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="3"
                android:textAlignment="center"
                android:textColor="#a47cea"
                android:textSize="@dimen/text_size_x_large" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="4"
                android:textAlignment="center"
                android:textColor="#a47cea"
                android:textSize="@dimen/text_size_x_large" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="5"
                android:textAlignment="center"
                android:textColor="#a47cea"
                android:textSize="@dimen/text_size_x_large" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="6"
                android:textAlignment="center"
                android:textColor="#a47cea"
                android:textSize="@dimen/text_size_x_large" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="7"
                android:textAlignment="center"
                android:textColor="#a47cea"
                android:textSize="@dimen/text_size_x_large" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="8"
                android:textAlignment="center"
                android:textColor="#a47cea"
                android:textSize="@dimen/text_size_x_large" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="9"
                android:textAlignment="center"
                android:textColor="#a47cea"
                android:textSize="@dimen/text_size_x_large" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_column="1"
                android:gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#a47cea"
                android:textSize="@dimen/text_size_x_large" />

            <ImageView
                android:id="@+id/grid_backspace"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:padding="15dp"
                android:src="@drawable/backspace" />

        </GridLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/pin_send_button"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@color/checkinButtonInactive"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/send_pin_title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_normal" />

</RelativeLayout>