<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/portrait"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="7.5dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/portrait"
        android:layout_toStartOf="@+id/confirm"
        android:gravity="center_vertical"
        android:textColor="@color/light_purple"
        android:textSize="@dimen/text_size_normal" />

    <RelativeLayout
        android:id="@+id/confirm"
        android:layout_width="70dp"
        android:layout_height="27dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/delete"
        android:background="@drawable/round_corner_blue_fill">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/confirm"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_normal" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/delete"
        android:layout_width="70dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="7.5dp"
        android:background="@drawable/round_corner_pink_hallow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/delete"
            android:textColor="@color/light_purple"
            android:textSize="@dimen/text_size_normal" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/separator_light_grey" />

</RelativeLayout>