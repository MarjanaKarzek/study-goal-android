<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="1.5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/module_icon"
                        android:layout_width="60dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/newactivity_module_icon" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/module_icon"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/new_activity_text_module"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_weight="4.5"
                            android:text="@string/module"
                            android:textColor="@color/text_medium_blue_primary"
                            android:textSize="@dimen/text_size_normal" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/new_activity_module_textView"
                            style="@style/AppSpinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="5.5"
                            android:gravity="end"
                            android:paddingStart="3dp"
                            android:textColor="@color/text_dark_purple"
                            android:textSize="@dimen/text_size_normal" />

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="1.5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/type_icon"
                        android:layout_width="60dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/newactivity_choose_icon" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/type_icon"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/new_activity_activity_type_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_weight="4.5"
                            android:text="@string/activity_type"
                            android:textColor="@color/text_medium_blue_primary"
                            android:textSize="@dimen/text_size_normal" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/new_activity_activitytype_textView"
                            style="@style/AppSpinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="5.5"
                            android:gravity="end"
                            android:paddingStart="3dp"
                            android:textColor="@color/text_dark_purple"
                            android:textSize="@dimen/text_size_normal" />

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="1.5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/choose_icon"
                        android:layout_width="60dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/newactivity_choose_icon" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/choose_icon"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/new_activity_text_choose"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_weight="4.5"
                            android:text="@string/choose_activity"
                            android:textColor="@color/text_medium_blue_primary"
                            android:textSize="@dimen/text_size_normal" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/new_activity_choose_textView"
                            style="@style/AppSpinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="5.5"
                            android:gravity="end"
                            android:paddingStart="3dp"
                            android:textColor="@color/text_dark_purple"
                            android:textSize="@dimen/text_size_normal" />

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="1.5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/timer" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/new_activity_text_reminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="15dp"
                        android:text="@string/reminder_to_take_breather_after"
                        android:textColor="@color/text_medium_blue_primary"
                        android:textSize="@dimen/text_size_normal" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="1.5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/new_activity_text_timer_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        android:hint="00"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="5"
                        android:textColor="@color/login_btn_purple"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/new_activity_text_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="7.5dp"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/new_activity_text_timer_1"
                        android:text="@string/minutes"
                        android:textColor="@color/login_btn_purple"
                        android:textSize="@dimen/text_size_normal" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/new_activity_text_timer_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="00:00"
                            android:textColor="@color/login_btn_purple"
                            android:textSize="@dimen/text_size_x_large" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/new_activity_btn_pause"
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="5dp"
                                android:visibility="gone"
                                card_view:cardBackgroundColor="@color/colorPrimary"
                                card_view:cardCornerRadius="2dp"
                                card_view:cardElevation="1dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/new_activity_btn_pause_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="@string/pause"
                                        android:textColor="@color/text_white"
                                        android:textSize="@dimen/text_size_large" />

                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/new_activity_btn_start"
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="5dp"
                                card_view:cardBackgroundColor="@color/colorPrimary"
                                card_view:cardCornerRadius="2dp"
                                card_view:cardElevation="1dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/new_activity_btn_start_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="@string/start"
                                        android:textColor="@color/text_white"
                                        android:textSize="@dimen/text_size_large" />

                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/new_activity_btn_stop"
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="5dp"
                                card_view:cardBackgroundColor="@color/red"
                                card_view:cardCornerRadius="2dp"
                                card_view:cardElevation="1dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/new_activity_btn_stop_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="@string/stop"
                                        android:textColor="@color/text_white"
                                        android:textSize="@dimen/text_size_large" />

                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/add_new_module_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="80dp"
            android:background="@color/background_color">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_corner_search">

                <EditText
                    android:id="@+id/add_module_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="3dp"
                    android:background="@null"
                    android:hint="@string/add_module"
                    android:imeOptions="actionSearch"
                    android:lines="1"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_normal" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/add_module_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_corner_blue_fill">

                <TextView
                    android:id="@+id/add_module_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingBottom="10dp"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:text="@string/add_module"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_normal" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>