<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friend_item"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:background="#FFF">

    <TextView
        android:id="@+id/dialog_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/default_blue"
        android:textSize="@dimen/text_size_normal" />

    <RelativeLayout
        android:id="@+id/hide"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_corner_blue_hallow"
        android:visibility="invisible">

        <TextView
            android:id="@+id/hide_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/hide"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_normal" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/unhide"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_corner_blue_fill"
        android:visibility="invisible">

        <TextView
            android:id="@+id/unhide_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/unhide"
            android:textColor="#FFF"
            android:textSize="@dimen/text_size_normal" />

    </RelativeLayout>

</RelativeLayout>