<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studygoal.jisc">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name="com.studygoal.jisc.NotificationAlarm" />

        <service
            android:name="com.studygoal.jisc.Syncronize"
            android:stopWithTask="true" />

        <meta-data android:name="com.inthecheesefactory.lab.glidepicasso.GlideConfiguration"
            android:value=".GlideModule"/>

        <meta-data
            android:name="AA_DB_NAME"
            android:value="learninganalitycs31.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="42" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.studygoal.jisc.Models.Institution, com.studygoal.jisc.Models.CurrentUser, com.studygoal.jisc.Models.Module,
                         com.studygoal.jisc.Models.ActivityHistory, com.studygoal.jisc.Models.Activity, com.studygoal.jisc.Models.Targets,
                                      com.studygoal.jisc.Models.StretchTarget, com.studygoal.jisc.Models.Feed, com.studygoal.jisc.Models.Friend,             com.studygoal.jisc.Models.RunningActivity, com.studygoal.jisc.Models.CourseAttendant, com.studygoal.jisc.Models.PendingRequest,             com.studygoal.jisc.Models.ReceivedRequest, com.studygoal.jisc.Models.Mark, com.studygoal.jisc.Models.Trophy, com.studygoal.jisc.Models.TrophyMy,             com.studygoal.jisc.Models.Attainment , com.studygoal.jisc.Models.Courses" />

        <activity
            android:name="com.studygoal.jisc.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"/>
        <activity
            android:name="com.studygoal.jisc.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustUnspecified">

        </activity>
        <activity
            android:name="com.studygoal.jisc.TrophyDetails"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.studygoal.jisc.SettingsActivity" />
        <activity android:name="com.studygoal.jisc.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.studygoal.jisc.ForgotPassword" />
    </application>

</manifest>
